/* Main Content Container */
.main-content {
  flex: 1;
  background-color: #f8f9fa;
  min-height: calc(100vh - 64px); /* Subtract header height */
  overflow: auto;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 50vh;
  text-align: center;
}

.loading-container p {
  margin-top: 1rem;
  color: #667eea;
  font-size: 16px;
  font-weight: 500;
}

.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 50vh;
  text-align: center;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 12px;
  padding: 3rem;
  box-shadow: 0 8px 32px rgba(102, 126, 234, 0.15);
  border: 1px solid rgba(102, 126, 234, 0.1);
}

.error-icon {
  font-size: 64px;
  width: 64px;
  height: 64px;
  color: #764ba2;
  margin-bottom: 1rem;
}

.error-container h3 {
  color: #667eea;
  margin-bottom: 1rem;
  font-weight: 600;
}

.error-container p {
  color: #666;
  margin-bottom: 2rem;
}

/* Header Card Styling */
.header-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
  color: white !important;
  box-shadow: 0 8px 32px rgba(102, 126, 234, 0.25) !important;
  border-radius: 12px !important;
  border: none !important;
}

.header-card .mat-mdc-card-header {
  padding: 2rem !important;
}

.header-card .mat-mdc-card-header .mat-mdc-card-title {
  color: white !important;
  font-size: 1.8rem !important;
  font-weight: 600 !important;
  margin: 0 !important;
}

.header-card .mat-mdc-card-header .mat-mdc-card-subtitle {
  color: rgba(255, 255, 255, 0.9) !important;
  margin-top: 0.5rem !important;
}

.header-card .form-meta {
  display: flex;
  gap: 2rem;
  flex-wrap: wrap;
  margin-top: 0.5rem;
}

.header-card .meta-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.9rem;
  opacity: 0.9;
}

.header-card .meta-item mat-icon {
  font-size: 18px;
  width: 18px;
  height: 18px;
  color: white !important;
}

.header-card .mat-mdc-card-avatar .header-icon {
  background: rgba(255, 255, 255, 0.2) !important;
  color: white !important;
  border-radius: 50% !important;
  padding: 12px !important;
  font-size: 24px !important;
  width: 48px !important;
  height: 48px !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

.header-card .mat-mdc-card-actions {
  padding: 1rem 2rem 2rem 2rem !important;
}

.header-card .mat-mdc-card-actions button {
  background: rgba(255, 255, 255, 0.2) !important;
  color: white !important;
  border: 1px solid rgba(255, 255, 255, 0.3) !important;
  backdrop-filter: blur(10px) !important;
  transition: all 0.3s ease !important;
}

.header-card .mat-mdc-card-actions button:hover {
  background: rgba(255, 255, 255, 0.3) !important;
  transform: translateY(-2px) !important;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2) !important;
}

/* Form Card Styling */
.form-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%) !important;
  box-shadow: 0 8px 32px rgba(102, 126, 234, 0.15) !important;
  border-radius: 12px !important;
  border: 1px solid rgba(102, 126, 234, 0.1) !important;
  overflow: hidden !important;
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
}

.form-card .mat-mdc-card-header {
  padding: 2rem 2rem 1rem 2rem !important;
  border-bottom: 1px solid rgba(102, 126, 234, 0.1) !important;
}

.form-card .mat-mdc-card-title {
  color: #667eea !important;
  font-size: 1.4rem !important;
  font-weight: 600 !important;
  margin: 0 !important;
}

.form-card .mat-mdc-card-subtitle {
  color: #666 !important;
  margin-top: 0.5rem !important;
}

.form-card .mat-mdc-card-content {
  padding: 2rem !important;
  max-width: 100% !important;
  overflow: hidden !important;
  box-sizing: border-box !important;
  width: 100% !important;
}

.form-card .mat-mdc-card-actions {
  padding: 1rem 2rem 2rem 2rem !important;
  border-top: 1px solid rgba(102, 126, 234, 0.1) !important;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.03) 0%, rgba(118, 75, 162, 0.03) 100%) !important;
}

/* Center form submit button */
.form-card .mat-mdc-card-actions[align="end"] {
  justify-content: center !important;
}

/* Metadata Card Styling */
.metadata-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%) !important;
  box-shadow: 0 8px 32px rgba(102, 126, 234, 0.15) !important;
  border-radius: 12px !important;
  border: 1px solid rgba(102, 126, 234, 0.1) !important;
}

.metadata-card .mat-mdc-card-header {
  padding: 2rem 2rem 1rem 2rem !important;
  border-bottom: 1px solid rgba(102, 126, 234, 0.1) !important;
}

.metadata-card .mat-mdc-card-title {
  color: #667eea !important;
  font-size: 1.4rem !important;
  font-weight: 600 !important;
  margin: 0 !important;
}

.metadata-card .mat-mdc-card-subtitle {
  color: #666 !important;
  margin-top: 0.5rem !important;
}

.metadata-card .mat-mdc-card-content {
  padding: 2rem !important;
}

.section-title {
  color: #667eea;
  font-size: 1.4rem;
  font-weight: 600;
  margin-bottom: 1.5rem;
  border-bottom: 2px solid rgba(102, 126, 234, 0.2);
  padding-bottom: 0.5rem;
}

.fields-container {
  display: grid;
  gap: 1.5rem;
}

.field-card {
  border: 1px solid rgba(102, 126, 234, 0.2);
  border-radius: 8px;
  padding: 1.5rem;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  transition: all 0.3s ease;
}

.field-card:hover {
  box-shadow: 0 4px 16px rgba(102, 126, 234, 0.2);
  border-color: rgba(102, 126, 234, 0.3);
  transform: translateY(-1px);
}

.field-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

.field-name {
  margin: 0;
  color: #667eea;
  font-size: 1.1rem;
  font-weight: 600;
}

.field-type {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  color: #667eea;
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 0.8rem;
  font-weight: 600;
  border: 1px solid rgba(102, 126, 234, 0.2);
}

.field-content {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.field-value,
.field-config {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.value-label,
.config-label {
  font-weight: 600;
  color: #667eea;
  font-size: 0.9rem;
}

.value-text {
  background: linear-gradient(135deg, #ffffff 0%, #fafbfc 100%);
  padding: 0.75rem;
  border-radius: 6px;
  border: 1px solid rgba(102, 126, 234, 0.2);
  color: #333;
  font-family: inherit;
  transition: all 0.2s ease;
}

.value-text:hover {
  border-color: rgba(102, 126, 234, 0.3);
  box-shadow: 0 2px 8px rgba(102, 126, 234, 0.1);
}

.config-text {
  color: #666;
  font-size: 0.9rem;
}

.config-badges {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.config-badge {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 6px 12px;
  border-radius: 16px;
  font-size: 0.8rem;
  font-weight: 600;
  transition: all 0.2s ease;
}

.config-badge.mandatory {
  background: linear-gradient(135deg, rgba(118, 75, 162, 0.1) 0%, rgba(102, 126, 234, 0.1) 100%);
  color: #764ba2;
  border: 1px solid rgba(118, 75, 162, 0.2);
}

.config-badge.validation {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  color: #667eea;
  border: 1px solid rgba(102, 126, 234, 0.2);
}

.config-badge mat-icon {
  font-size: 16px;
  width: 16px;
  height: 16px;
}

.metadata-section {
  padding: 2rem;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  border-top: 1px solid rgba(102, 126, 234, 0.2);
  margin: 2rem auto;
  max-width: 1200px;
  border-radius: 12px;
  box-shadow: 0 4px 16px rgba(102, 126, 234, 0.1);
}

/* Enhanced Metadata Grid Layout */
.metadata-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 1.5rem;
}

.metadata-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 8px;
  border: 1px solid rgba(102, 126, 234, 0.2);
  transition: all 0.3s ease;
}

.metadata-item:hover {
  border-color: rgba(102, 126, 234, 0.4);
  box-shadow: 0 4px 16px rgba(102, 126, 234, 0.15);
  transform: translateY(-2px);
}

.metadata-label {
  font-weight: 600;
  color: #667eea;
  font-size: 0.95rem;
}

.metadata-value {
  color: #333;
  font-weight: 500;
  font-size: 0.95rem;
  text-align: right;
}

/* Error Styling Enhancements */
mat-error {
  color: #d32f2f !important;
  font-size: 12px !important;
  margin-top: 4px !important;
  display: flex !important;
  align-items: center !important;
  gap: 4px !important;
  font-weight: 500 !important;
}

/* Enhanced animations for card appearance */
@keyframes cardFadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.header-card,
.form-card,
.metadata-card {
  animation: cardFadeIn 0.6s ease-out;
  animation-fill-mode: both;
}

.header-card {
  animation-delay: 0.1s;
}

.form-card {
  animation-delay: 0.2s;
}

.metadata-card {
  animation-delay: 0.3s;
}

/* Responsive Design Enhancements for Material Cards */
@media (max-width: 768px) {
  .form-display {
    max-width: 100%;
    margin: 0;
    gap: 1.5rem;
  }
  
  .viewer-container {
    padding: 1rem;
  }
  
  .header-card .mat-mdc-card-header,
  .form-card .mat-mdc-card-header,
  .metadata-card .mat-mdc-card-header {
    padding: 1.5rem 1.5rem 1rem 1.5rem !important;
  }
  
  .header-card .mat-mdc-card-actions,
  .form-card .mat-mdc-card-actions {
    padding: 1rem 1.5rem 1.5rem 1.5rem !important;
  }
  
  .form-card .mat-mdc-card-content,
  .metadata-card .mat-mdc-card-content {
    padding: 1.5rem !important;
  }
  
  .header-card .form-meta {
    flex-direction: column;
    gap: 1rem;
  }
  
  .metadata-grid {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
  
  .metadata-item {
    flex-direction: column;
    text-align: center;
    gap: 0.5rem;
  }
  
  .metadata-value {
    text-align: center;
  }
  
  /* Adjust main content for mobile */
  .main-content {
    min-height: calc(100vh - 56px); /* Smaller header on mobile */
  }
}

@media (max-width: 480px) {
  .header-card .mat-mdc-card-title {
    font-size: 1.4rem !important;
  }
  
  .form-card .mat-mdc-card-title,
  .metadata-card .mat-mdc-card-title {
    font-size: 1.2rem !important;
  }
  
  .form-field-container .full-width {
    min-width: 200px;
  }
  
  .viewer-container {
    padding: 0.5rem;
  }
  
  .header-card .mat-mdc-card-header,
  .form-card .mat-mdc-card-header,
  .metadata-card .mat-mdc-card-header {
    padding: 1rem 1rem 0.5rem 1rem !important;
  }
  
  .header-card .mat-mdc-card-actions,
  .form-card .mat-mdc-card-actions {
    padding: 0.5rem 1rem 1rem 1rem !important;
  }
  
  .form-card .mat-mdc-card-content,
  .metadata-card .mat-mdc-card-content {
    padding: 1rem !important;
  }
}

